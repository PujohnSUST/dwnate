<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">DWNATE <%= campaign.name %></h1>
        <div style="width: 20%; margin: 25px auto;">
            <form action="/campaigns/<%= campaign._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[amount]" placeholder="amount">
                    <input class="form-control" type="text" name="comment[text]" placeholder="donation tags">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campaigns">Go Back</a>
        </div>
    </div>
